<%- include("../layouts/admin/header") -%>


    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Order List</h2>
                <p>List of orders</p>
            </div>
            <div>
                <input type="text" placeholder="Search order ID" class="form-control bg-white" />
            </div>
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <div class="row gx-3">
                    <div class="col-lg-4 col-md-6 me-auto">
                        <input type="text" placeholder="Search..." class="form-control" />
                    </div>
                    <div class="col-lg-2 col-6 col-md-3">
                        <select class="form-select">
                            <option>Status</option>
                            <option>Active</option>
                            <option>Disabled</option>
                            <option>Show all</option>
                        </select>
                    </div>
                    <div class="col-lg-2 col-6 col-md-3">
                        <select class="form-select">
                            <option>Show 20</option>
                            <option>Show 30</option>
                            <option>Show 40</option>
                        </select>
                    </div>
                </div>
            </header>
            <!-- card-header end// -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Order Id</th>
                                <th scope="col">Customer Name</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Total</th>
                                <th scope="col">Status</th>
                                <th scope="col">Date</th>
                                <th scope="col" class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orderData.forEach((order) => { %>
                                <% order.orderedItem.forEach((item) => { %>
                            <tr>
                                <td><%= order._id %></td>
                                <td><b><%= order.userId && order.userId.name ? order.userId.name : 'Unknown' %></b></td>
                                <td><%= item.productId && item.productId.product_name ? item.productId.product_name : 'No Product Name' %></td>
                                <td><%= order.orderAmount%></td>
                                <td><span class="badge rounded-pill  <%= item.status ? item.status.toLowerCase() : '' %>"><%= item.status %></span></td>
                                <td><%= order.orderDate.toLocaleDateString()%></td>
                                <td class="text-end">
                                    <a href="/admin/orders/orderDetails/?productId=<%= item.productId._id %>&userId=<%= order.userId._id %>&orderId=<%=order._id%>" class="btn btn-md rounded font-sm">Detail</a>
                                </td>
                            </tr>
                            <% }); %>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <!-- table-responsive //end -->
            </div>
            <!-- card-body end// -->
        </div>
        <!-- card end// -->
        <div class="pagination-area mt-15 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    <li class="page-item active"><a class="page-link" href="#">01</a></li>
                    <li class="page-item"><a class="page-link" href="#">02</a></li>
                    <li class="page-item"><a class="page-link" href="#">03</a></li>
                    <li class="page-item"><a class="page-link dot" href="#">...</a></li>
                    <li class="page-item"><a class="page-link" href="#">16</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
    </section>
    <script src="/adminAssets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/adminAssets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/adminAssets/js/vendors/select2.min.js"></script>
    <script src="/adminAssets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/adminAssets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/adminAssets/js/main.js?v=1.1" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<style>
  .table-container {
    position: relative;
    overflow-x: auto;
  }

  .returned {
    background-color: #dc3546b9;
  }
  .pending {
    background-color: #ffc107be;
  }
  .confirmed {
    background-color: #0d6dfdc4; 
  }
  .shipped {
    background-color: #198754be; 
  }
  .delivered {
    background-color: #198754c7; 
  }
  .cancelled {
    background-color: #dc3546d3; 
  }
</style>

</body>

</html>