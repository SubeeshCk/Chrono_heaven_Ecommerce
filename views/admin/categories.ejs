        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Categories</h2>
                    <p>Product categories</p>
                </div>
                <div>
                    <a href="/admin/categories/add-category" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col col-check flex-grow-0">
                            <div class="form-check ms-2">
                                <input class="form-check-input" type="checkbox" value="" />
                            </div>
                        </div>
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All category</option>
                                <option>Electronics</option>
                                <option>Clothes</option>
                                <option>Automobile</option>
                            </select>
                        </div>
                    </div>
                </header>
                <!-- Assuming this is inside categories.ejs -->
                <div class="card mb-4">
                    <% if (messages.success) { %>
                        <div class="alert alert-success" role="alert" style="color: green;">
                            <%= messages.success %>
                        </div>
                        <% } %>

                            <% if (messages.error) { %>
                                <div class="alert alert-danger" role="alert" style="color: red;">
                                    <%= messages.error %>
                                </div>
                                <% } %>

                                    <!-- Loop through categories dynamically -->
                                    <% categories.forEach(category=> { %>
                                        <article class="itemlist">
                                            <div class="row align-items-center">
                                                <div class="col col-check flex-grow-0">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox"
                                                            value="<%= category._id %>" />
                                                    </div>
                                                </div>

                                                <!-- Category Name Column -->
                                                <div class="col-lg-2 col-sm-4 col-8 flex-grow-1 col-name">
                                                    <h6 class="mb-0">
                                                        <%= category.name %>
                                                    </h6>
                                                </div>

                                                <!-- Category Description Column -->
                                                <div class="col-lg-4 col-sm-6 col-12 flex-grow-1 col-description">
                                                    <p class="mb-0">
                                                        <%= category.description %>
                                                    </p> <!-- Added description in its own column -->
                                                </div>

                                                <!-- Category Status Column -->
                                                <div class="col-lg-2 col-sm-2 col-4 col-status">
                                                    <span
                                                        class="badge rounded-pill <%= category.is_listed ? 'alert-success' : 'alert-danger' %>">
                                                        <%= category.is_listed ? 'Active' : 'unlisted' %>
                                                    </span>
                                                </div>

                                                <!-- Action Buttons Column -->
                                                <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                                    <a href="/admin/categories/edit-category/<%=category._id%>"
                                                        class="btn btn-sm font-sm rounded btn-brand"> <i
                                                            class="material-icons md-edit"></i> Edit </a>
                                                    <a href="/admin/categories/<%= category.is_listed ? 'unlist' : 'list' %>-category/<%=category._id%>"
                                                        class="btn btn-sm font-sm btn-light rounded"> <i
                                                            class="material-icons md-delete_forever"></i>
                                                        <%= category.is_listed ? 'Unlist' : 'List' %>
                                                    </a>
                                                </div>
                                            </div>
                                        </article>
                                        <% }) %>
                </div>
            </div>
            <!-- card-body end// -->
            </div>
            <!-- card end// -->
