    <script src="/adminAssets/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="/adminAssets/js/vendors/chart.js"></script>
    <!-- Main Script -->
    <script src="/adminAssets/js/main.js?v=1.1" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
    
// Replace the existing script with this updated version
document.addEventListener('DOMContentLoaded', function () {
  const salesCtx = document.getElementById('salesChart').getContext('2d');
  const orderCtx = document.getElementById('orderChart').getContext('2d');
  const reportTypeSelect = document.getElementById('reportType');

  let salesChart;
  let orderChart;

  const chartOptions = {
  responsive: true,
  scales: {
    y: {
      beginAtZero: true,
      ticks: {
        callback: function(value, index, values) {
          if (this.chart.canvas.id === 'salesChart') {
            return '₹' + value.toLocaleString();
          }
          return value;
        }
      }
    }
  },
  plugins: {
    tooltip: {
      callbacks: {
        label: function(context) {
          if (context.chart.canvas.id === 'salesChart') {
            return '₹' + context.parsed.y.toLocaleString();
          }
          return context.parsed.y;
        }
      }
    }
  }
};

  // Initialize charts with proper configuration
  function initializeCharts(initialData) {
    salesChart = new Chart(salesCtx, {
      type: 'bar',
      data: {
        labels: initialData.sales.labels,
        datasets: [{
          label: 'Sales Revenue (₹)',
          data: initialData.sales.data,
          backgroundColor: 'rgba(75, 192, 192, 0.2)',
          borderColor: 'rgba(75, 192, 192, 1)',
          borderWidth: 1
        }]
      },
      options: {
        ...chartOptions,
        tooltips: {
          callbacks: {
            label: function(tooltipItem) {
              return '₹' + tooltipItem.yLabel.toFixed(2);
            }
          }
        }
      }
    });

    orderChart = new Chart(orderCtx, {
      type: 'bar',
      data: {
        labels: initialData.orders.labels,
        datasets: [{
          label: 'Number of Orders',
          data: initialData.orders.data,
          backgroundColor: 'rgba(153, 102, 255, 0.2)',
          borderColor: 'rgba(153, 102, 255, 1)',
          borderWidth: 1
        }]
      },
      options: chartOptions
    });
  }

  // Function to update charts with new data
  function updateCharts(newData) {
    if (salesChart && orderChart) {
      // Update sales chart
      salesChart.data.labels = newData.sales.labels;
      salesChart.data.datasets[0].data = newData.sales.data;
      salesChart.update();

      // Update orders chart
      orderChart.data.labels = newData.orders.labels;
      orderChart.data.datasets[0].data = newData.orders.data;
      orderChart.update();

      // Update total orders display
      document.querySelector('.total-orders').textContent = newData.totalOrders;
    }
  }

  // Function to fetch new data based on selected time period
  async function fetchFilteredData(reportType) {
    try {
      const response = await fetch(`/admin/dashboard/data?reportType=${reportType}`);
      if (!response.ok) {
        throw new Error('Network response was not ok');
      }
      const data = await response.json();
      updateCharts(data);
    } catch (error) {
      console.error('Error fetching filtered data:', error);
      alert('Error loading dashboard data. Please try again.');
    }
  }

  // Event listener for filter changes
  reportTypeSelect.addEventListener('change', function() {
    fetchFilteredData(this.value);
  });

  // Initialize charts with the initial data
  const initialChartData = JSON.parse(document.getElementById('initial-chart-data').value);
  initializeCharts(initialChartData);
});
    </script>

    
</body>

</html>