    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>


    <script>
        $(document).ready(function () {
            const dateRangeSelect = $('#dateRange');
            const customDateRange = $('#customDateRange');
            const applyCustomDatesBtn = $('#applyCustomDates');
            const downloadPdfBtn = $('#downloadPdfBtn');
            const loadingSpinner = $('#loadingSpinner');
            const searchInput = $('#searchInput');
            let currentDateRange = 'daily';
            let currentStartDate = null;
            let currentEndDate = null;

            // Handle date range selection
            dateRangeSelect.on('change', function () {
                const selectedRange = $(this).val();
                currentDateRange = selectedRange;

                if (selectedRange === 'custom') {
                    customDateRange.show();
                } else {
                    customDateRange.hide();
                    fetchAndDisplaySalesReport(selectedRange);
                }
            });

            // Handle custom date range
            applyCustomDatesBtn.click(function () {
                const startDate = $('#startDate').val();
                const endDate = $('#endDate').val();

                if (!startDate || !endDate) {
                    alert('Please select both start and end dates');
                    return;
                }

                currentStartDate = startDate;
                currentEndDate = endDate;
                fetchAndDisplaySalesReport('custom', startDate, endDate);
            });

            // Handle search functionality
            let searchTimeout;
            searchInput.on('input', function () {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    const searchValue = $(this).val().toLowerCase();
                    filterTableRows(searchValue);
                }, 300);
            });

            function filterTableRows(searchValue) {
                const rows = $('#salesTableBody tr');
                rows.each(function () {
                    const row = $(this);
                    const text = row.text().toLowerCase();
                    row.toggle(text.includes(searchValue));
                });
            }

            // Handle PDF download
            downloadPdfBtn.click(function () {
                const button = $(this);
                button.prop('disabled', true).html('<i class="material-icons md-file_download"></i> Generating...');

                fetch('/admin/downloadsalesreport')
                    .then(response => {
                        if (!response.ok) throw new Error('Network response was not ok');
                        return response.blob();
                    })
                    .then(blob => {
                        const url = window.URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = `salesReport_${moment().format('YYYYMMDD_HHmmss')}.pdf`;
                        document.body.appendChild(a);
                        a.click();
                        window.URL.revokeObjectURL(url);
                        document.body.removeChild(a);
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Failed to download PDF. Please try again.');
                    })
                    .finally(() => {
                        button.prop('disabled', false).html('<i class="material-icons md-file_download"></i> Download Report');
                    });
            });

            // Update statistics
            function updateStatistics(data) {
                const totalOrders = data.length;
                const totalRevenue = data.reduce((sum, order) => sum + order.totalAmount, 0);
                const avgOrderValue = totalOrders > 0 ? totalRevenue / totalOrders : 0;
                const successfulOrders = data.filter(order =>
                    ['delivered', 'shipped', 'confirmed'].includes(order.orderStatus.toLowerCase())
                ).length;
                const successRate = totalOrders > 0 ? (successfulOrders / totalOrders) * 100 : 0;

                $('#totalOrders').text(totalOrders);
                $('#totalRevenue').text(`₹${totalRevenue.toFixed(2)}`);
                $('#avgOrderValue').text(`₹${avgOrderValue.toFixed(2)}`);
                $('#successRate').text(`${successRate.toFixed(1)}%`);
            }

            // Main function to fetch and display sales report
            function fetchAndDisplaySalesReport(dateRange, startDate = null, endDate = null, page = 1) {
                loadingSpinner.show();

                $.ajax({
                    url: '/admin/sortReport',
                    method: 'POST',
                    data: { dateRange, startDate, endDate, page },
                    success: function (response) {
                        const tbody = $('#salesTableBody');
                        tbody.empty();

                        if (!response.salesData || response.salesData.length === 0) {
                            tbody.html('<tr><td colspan="8" class="text-center">No sales data available for the selected date range.</td></tr>');
                        } else {
                            response.salesData.forEach(sale => {
                                const row = `
                            <tr>
                                <td>${sale.orderId}</td>
                                <td><b>${sale.customerName}</b></td>
                                <td>
                                    ${sale.itemCount} items
                                    <small class="text-muted d-block">
                                        ${sale.productNames}
                                    </small>
                                </td>
                                <td>₹${sale.totalAmount.toFixed(2)}</td>
                                <td>${sale.paymentMethod || 'N/A'}</td>
                                <td>
                                    <span class="badge rounded-pill status-label ${sale.orderStatus.toLowerCase()}">
                                        ${sale.orderStatus}
                                    </span>
                                </td>
                                <td>${moment(sale.orderDate).format('DD/MM/YYYY')}</td>
                                <td class="text-end">
                                    <a href="/admin/sales/details/${sale.orderId}" class="btn btn-sm btn-light">Details</a>
                                </td>
                            </tr>
                        `;
                                tbody.append(row);
                            });

                            updateStatistics(response.salesData);
                            updatePagination(response.totalPages, response.currentPage);
                        }
                    },
                    error: function (err) {
                        console.error('Error fetching sales data:', err);
                        $('#salesTableBody').html('<tr><td colspan="8" class="text-center text-danger">Error fetching sales data. Please try again.</td></tr>');
                    },
                    complete: function () {
                        loadingSpinner.hide();
                    }
                });
            }

            // Update pagination
            function updatePagination(totalPages, currentPage) {
                const pagination = $('#pagination');
                pagination.empty();

                if (totalPages > 1) {
                    // Previous button
                    pagination.append(`
                <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                    <a class="page-link" href="#" data-page="${currentPage - 1}">
                        <i class="material-icons md-chevron_left"></i>
                    </a>
                </li>
            `);

                    // Page numbers
                    for (let i = 1; i <= totalPages; i++) {
                        pagination.append(`
                    <li class="page-item ${currentPage === i ? 'active' : ''}">
                        <a class="page-link" href="#" data-page="${i}">${String(i).padStart(2, '0')}</a>
                    </li>
                `);
                    }

                    // Next button
                    pagination.append(`
                <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                    <a class="page-link" href="#" data-page="${currentPage + 1}">
                        <i class="material-icons md-chevron_right"></i>
                    </a>
                </li>
            `);

                    // Handle pagination clicks
                    pagination.find('.page-link').on('click', function (e) {
                        e.preventDefault();
                        const page = $(this).data('page');
                        if (page && page >= 1 && page <= totalPages) {
                            fetchAndDisplaySalesReport(currentDateRange, currentStartDate, currentEndDate, page);
                        }
                    });
                }
            }

            // Initial load of sales report
            fetchAndDisplaySalesReport('daily');
        });
    </script>
