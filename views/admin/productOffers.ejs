        </header>

        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">Manage Product Offers</h2>
                <div id="flash-messages"></div>
                <button type="button" class="btn btn-primary mb-3" onclick="openAddOfferForm()">Add Offer</button>
            </div>


            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Available Product Offers</h5>
                    <div class="row" id="offersList">
                        <% if (offers.length> 0) { %>
                            <% offers.forEach(offer=> { %>
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-text">Product: <%= offer.productId ? offer.productId.product_name
                                                    : 'Product Not Available' %>
                                            </h5>
                                            <p class="card-title">Description: <%= offer.description %>
                                            </p>
                                            <p class="card-text">Discount Value: <%= offer.discountValue %>%</p>
                                            <p class="card-text">Start Date: <%= offer.startDate.toLocaleDateString() %>
                                            </p>
                                            <p class="card-text">End Date: <%= offer.endDate.toLocaleDateString() %>
                                            </p>
                                            <button type="button" class="btn btn-danger"
                                                onclick="confirmRemoveOffer('<%= offer._id %>')">Remove</button>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <p>No offers available.</p>
                                        <% } %>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="/adminAssets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/adminAssets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/adminAssets/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.min.js"></script>
    <script>
        function openAddOfferForm() {
            window.location.href = '/admin/addProductOffer';
        }

        function confirmRemoveOffer(offerId) {
            Swal.fire({
                title: "Are you sure?",
                text: "Once deleted, you will not be able to recover this offer!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, delete it!",
            }).then(async (result) => {
                if (result.isConfirmed) {
                    removeOffer(offerId);
                }
            });
        }

        async function removeOffer(offerId) {
            try {
                const response = await fetch(`/admin/removeProductOffer/${offerId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Offer removed successfully!',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    const errorData = await response.json();
                    displayFlashMessage('danger', errorData.error || 'Failed to remove offer');
                }
            } catch (error) {
                console.error('Error removing offer:', error);
                displayFlashMessage('danger', 'An error occurred while removing the offer');
            }
        }

        function displayFlashMessage(type, message) {
            const flashMessage = `<div class="alert alert-${type}" role="alert">${message}</div>`;
            document.getElementById('flash-messages').innerHTML = flashMessage;
            setTimeout(() => {
                document.getElementById('flash-messages').innerHTML = '';
            }, 3000);
        }

        document.getElementById('addOfferForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const formData = new FormData(this);
            try {
                const response = await fetch('/admin/addProductOffer', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Product offer added successfully!',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    const errorData = await response.json();
                    displayFlashMessage('danger', errorData.error || 'Failed to add product offer');
                }
            } catch (error) {
                console.error('Error adding product offer:', error);
                displayFlashMessage('danger', 'An error occurred while adding the product offer');
            }
        });
    </script>
