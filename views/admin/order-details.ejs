                                                            <br>
                                                            <small
                                                                style="text-decoration: line-through; color: #e70707;">
                                                                ₹<%= product.priceAtPurchase %>
                                                            </small>
                                                            <% } %>
                                                </td>
                                                <td>
                                                    <%= product.quantity %>
                                                </td>
                                                <td>₹<%= (product.priceAtPurchase - product.discountedPrice) *
                                                        product.quantity %>
                                                </td>
                                                <td>₹<%= product.totalProductAmount %>
                                                </td>
                                                <td><span class="badge status-label <%= product.status %>">
                                                    <%if ( product.status === "returnRequested"){ %>
                                                        Return pending
                                                        <% } else if ( product.status === "returnRequestCancelled") {%>
                                                        Return cancelled
                                                        <% } else { %>
                                                         <%= product.status %>
                                                        <% } %>
                                                    </span></td>
                                                <td>
                                                    <form class="updateProductStatusForm">
                                                        <input type="hidden" name="orderId" value="<%= order._id %>">
                                                        <input type="hidden" name="productId"
                                                            value="<%= product.productId._id %>">
                                                        <select class="form-select" name="productStatus">
                                                            <% if (product.status==='pending' ||
                                                                product.status==='confirmed' ) { %>
                                                                <option value="pending" <%=product.status==='pending'
                                                                    ? 'selected' : '' %>>Pending</option>
                                                                <option value="confirmed"
                                                                    <%=product.status==='confirmed' ? 'selected' : '' %>
                                                                    >Confirmed</option>
                                                                <option value="Cancelled">Cancelled</option>
                                                                <% } else { %>
                                                                    <option value="<%= product.status %>" selected>
                                                                        <%= product.status %>
                                                                    </option>
                                                                    <% } %>
                                                        </select>
                                                        <button type="submit"
                                                            class="btn btn-sm btn-primary mt-2">Update</button>
                                                    </form>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Order Summary Section -->
                            <div class="card-body border-top">
                                <div class="row">
                                    <div class="col-lg-8"></div>
                                    <div class="col-lg-4">
                                        <div class="table-responsive">
                                            <table class="table table-clear">
                                                <tbody>
                                                    <tr>
                                                        <td class="text-end"><strong>Subtotal</strong></td>
                                                        <td class="text-end">₹<%=
                                                                (order.orderAmount+order.couponDiscount).toFixed(2) %>
                                                        </td>
                                                    </tr>
                                                    <% if(order.couponDiscount> 0) { %>
                                                        <tr>
                                                            <td class="text-end"><strong>Coupon Discount</strong></td>
                                                            <td class="text-end">-₹<%= order.couponDiscount.toFixed(2)
                                                                    %>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                            <tr>
                                                                <td class="text-end"><strong>Grand Total</strong></td>
                                                                <td class="text-end"><strong>₹<%=
                                                                            order.orderAmount.toFixed(2) %></strong>
                                                                </td>
                                                            </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <style>
        #statusMessage {
