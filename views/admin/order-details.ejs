        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order detail</h2>
                    <p>Details for Order ID: <%= order._id %>
                    </p>
                </div>
                <div class="content-header">
                    <a href="/admin/orders"><i class="material-icons md-arrow_back"></i> Go back </a>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-6">
                    <form class="updateOrderStatusForm">
                        <div class="d-flex align-items-center gap-3">
                            <input type="hidden" name="orderId" value="<%= order._id %>">
                            <select class="form-select" name="orderStatus" style="max-width: 200px;">
                                <% if (order.orderStatus==='confirmed' ) { %>
                                    <option value="confirmed" <%=order.orderStatus==='confirmed' ? 'selected' : '' %>
                                        >Confirmed</option>
                                    <option value="shipped">Shipped</option>
                                    <option value="delivered">Delivered</option>
                                    <option value="Cancelled">Cancelled</option>
                                    <% } else if (order.orderStatus==='pending' ) { %>
                                        <option value="pending" <%=order.orderStatus==='pending' ? 'selected' : '' %>
                                            >Pending</option>
                                        <option value="confirmed">Confirmed</option>
                                        <% } else if (order.orderStatus==='shipped' ) { %>
                                            <option value="shipped" selected>Shipped</option>
                                            <option value="delivered">Delivered</option>
                                            <option value="Cancelled">Cancelled</option>
                                            <% } else { %>
                                                <option value="<%= order.orderStatus %>" selected>
                                                    <%= order.orderStatus %>
                                                </option>
                                                <% } %>
                            </select>
                            <button type="submit" class="btn btn-primary">Update Order Status</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                            <span>
                                <i class="material-icons md-calendar_today"></i>
                                <b>
                                    <%= order.orderDate.toLocaleDateString()%>
                                </b>
                            </span>
                            <br />
                            <small class="text-muted">Order ID: <%= order._id %></small>
                        </div>
                    </div>
                </header>

                <div class="card-body">
                    <!-- Customer and Shipping Info Section -->
                    <div class="row mb-50 mt-20 order-info-wrap">
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-person"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">
                                        <%= order.userId.name %>
                                    </h6>
                                    <p class="mb-1">
                                        <%= order.userId.name %> <br />
                                            <%= order.userId.email %> <br />
                                                <%= order.userId.mobile %>
                                    </p>
                                </div>
                            </article>
                        </div>
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-local_shipping"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Order info</h6>
                                    <p> Payment Method: <%= order.paymentMethod %>
                                    </p>
                                    <p class="mb-1 ">
                                        Payment Status : <%= order.paymentStatus ? 'Payment Done' : 'Payment pending' %>
                                    </p>
                                    <p>
                                        Order Status : 
                                        <%if ( order.orderStatus === "returnRequested"){ %>
                                            Return request pending
                                            <% } else if ( order.orderStatus === "returnRequestCancelled") {%>
                                            Return request cancelled
                                            <% } else { %>
                                             <%= order.orderStatus %>
                                            <% } %>
                                    </p>
                                </div>
                            </article>
                        </div>
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-place"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Deliver to</h6>
                                    <p class="mb-1">
                                        <%= order.deliveryAddress.address %> <br>
                                            <%= order.deliveryAddress.locality %> <br>
                                                <%= order.deliveryAddress.city %> <br>
                                                    <%= order.deliveryAddress.state %> <br>
                                                        <%= order.deliveryAddress.pincode %>
                                    </p>
                                </div>
                            </article>
                        </div>
                    </div>

                    <!-- Products Table Section -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Unit Price</th>
                                            <th>Quantity</th>
                                            <th>Discount</th>
                                            <th>Total</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% order.orderedItem.forEach(product=> { %>
                                            <tr>
                                                <td>
                                                    <a class="itemside" href="#">
                                                        <div class="left">
                                                            <img src="/adminAssets/uploads/product_images/<%= product.productId.images[0] %>"
                                                                width="40" height="40" class="img-xs" alt="Item" />
                                                        </div>
                                                        <div class="info">
                                                            <%= product.productId.product_name %>
                                                        </div>
                                                    </a>
                                                </td>
                                                <td>
                                                    ₹<%= product.discountedPrice || product.priceAtPurchase %>
